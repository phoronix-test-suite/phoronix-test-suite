<?xml version="1.0"?>
<!--Phoronix Test Suite v8.0.0m1-->
<PhoronixTestSuite>
  <TestInformation>
    <Title>Portal</Title>
    <Description>This is a benchmark of Valve's Portal game. The test profile assumes you have a Steam account and have Steam installed for the system. This automates the process of executing the game and using a standardized time demo.</Description>
    <ResultScale>Frames Per Second</ResultScale>
    <Proportion>HIB</Proportion>
    <TimesToRun>3</TimesToRun>
